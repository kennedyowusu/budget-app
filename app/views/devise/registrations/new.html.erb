<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="auth-header">
    <div class="auth-direction">
      <%= link_to unauthenticated_root_path do %>
        <i class="material-icons" style="color:white; margin-left: 20px">arrow_back</i>
      <% end %>
    </div>

    <%# <div class="auth-logo">Budget App</div> %>

    <div class="submit-btn">
      <%= f.submit "Next", class: "submit-text" %>
    </div>
  </div>

  <div class="field">
    <%= f.text_field :name, placeholder: "Enter Full Name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Enter Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%# <%= f.submit "Sign Up", class: "sign-up-text" %>
  </div>
<% end %>
