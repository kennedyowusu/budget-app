
<div class="categories-header">
  <div class="mobile-menu">
      <%= image_tag("hamburger.png", :alt => "Menu", :class => "ham") %>
    <nav class="menu">
      <% if current_user %>
        <ul class="menu-ul">
          <li class="close-x">&#10006;</li>
          <li class="menu-name">
            <i class="material-icons">account_circle</i>
            <p><%= current_user.name %><?p>
          </li>
          <li class="menu-li">
            <i class="material-icons">settings</i>
            <%= link_to "Edit Account", edit_user_registration_path %>
          </li>
          <li class="menu-li">
            <i class="material-icons">exit_to_app</i>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      <% end %>
    </nav>
  </div>

  <div> Edit <%= resource_name.to_s.humanize %> </div>

  <%= link_to authenticated_root_path do %>
    <i class="material-icons">search</i>
  <% end %>
</div>
<div class = "login-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confrim New Password" %>
    </div>

    <div class="field">
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Confirm Old Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "splash-button create-category" %>
    </div>
  <% end %>
</div>


<div class = "unhappy">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "splash-button create-category"  %></div>

<div class="new-cat"><%= link_to "Back", :back %></div>
